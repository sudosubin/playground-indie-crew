{
  "name": "playground-indie-crew",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "libraries/*",
    "services/*"
  ],
  "type": "module",
  "scripts": {
    "lint": "oxlint",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "lint-staged": "^15.4.3",
    "oxfmt": "latest",
    "oxlint": "latest",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,md}": [
      "oxlint",
      "oxfmt"
    ],
    "*.{json,yml,yaml}": [
      "oxfmt"
    ]
  },
  "packageManager": "bun@1.2.0"
}
